<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "https://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
	<name>security</name>
	<version>1.0</version>
	<creationDate>06/04/2018</creationDate>
	<author>masood fallah</author>
	<authorEmail>masoodfallah68@gmail.com</authorEmail>
	<copyright>Copyright (C) 20018 - 2022 Open Source Matters, Inc. All rights reserved.</copyright>
	<description>TPL_PESTEH3_XML_DESCRIPTION</description>
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>offline.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>img</folder>
		<folder>js</folder>
		<folder>language</folder>
	</files>
	<positions>
		<position>menu</position>
		<position>search</position>
		<position>slider</position>
		<position>item1</position>
		<position>item2</position>
		<position>item3</position>
		<position>aboutus</position>
		<position>latestNews</position>
		<position>contactus</position>
		<position>description</position>
		<position>ourcustomer</position>
		<position>feature1</position>
		<position>feature2</position>
		<position>feature3</position>
		<position>feature4</position>
		<position>right</position>
		<position>breadCrump</position>
		<position>contactPage</position>
		<position>contactPage-map</position>
		<position>popularTag</position>

		<position>footer</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_pesteh3.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_pesteh3.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="templateColor" class="" type="color" default="#08C"
					label="TPL_PESTEH3_COLOR_LABEL"
					description="TPL_PESTEH3_COLOR_DESC" />

				<field name="templateBackgroundColor" class="" type="color" default="#F4F6F7"
					label="TPL_PESTEH3_BACKGROUND_COLOR_LABEL"
					description="TPL_PESTEH3_BACKGROUND_COLOR_DESC" />

				<field name="logoFile" class="" type="media" default=""
					label="TPL_PESTEH3_LOGO_LABEL"
					description="TPL_PESTEH3_LOGO_DESC" />

				<field name="sitetitle"  type="text" default=""
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					filter="string" />

				<field name="googleFont"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="TPL_PESTEH3_FONT_LABEL"
					description="TPL_PESTEH3_FONT_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field name="googleFontName" class="" type="text" default="Open+Sans"
					label="TPL_PESTEH3_FONT_NAME_LABEL"
					description="TPL_PESTEH3_FONT_NAME_DESC" 
					showon="googleFont:1" />

				<field name="fluidContainer"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="TPL_PESTEH3_FLUID_LABEL"
					description="TPL_PESTEH3_FLUID_DESC"
				>
					<option value="1">TPL_PESTEH3_FLUID</option>
					<option value="0">TPL_PESTEH3_STATIC</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
